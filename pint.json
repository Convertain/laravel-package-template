{
    "preset": "psr12",
    "rules": {
        "phpdoc_align": {
            "align": "left"
        },
        "phpdoc_summary": true,
        "ordered_imports": {
            "sort_algorithm": "alpha"
        }
    },
    "exclude": [
        "vendor",
        "workbench",
        "build"
    ]
}